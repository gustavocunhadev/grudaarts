CREATE TABLE PRODUCT (
    id INT AUTO_INCREMENT,
    name VARCHAR(50) NOT NULL,
    description VARCHAR(50) NOT NULL,
    price VARCHAR(50) NOT NULL,
    category VARCHAR(50) NOT NULL,
    qntStock INT NOT NULL,
    PRIMARY KEY(id)
)ENGINE=InnoDB;


CREATE TABLE ANNOUNCEMENT(
    idAnuncio INT AUTO_INCREMENT,
    idproduct INT,
    title VARCHAR(50),
    description VARCHAR(50),
    promocionalPrice VARCHAR(50),
    status BOOLEAN,

    PRIMARY KEY (idAnuncio),
    FOREIGN KEY (idproduct) REFERENCES PRODUCT(id)
)ENGINE=InnoDB;

INSERT INTO PRODUCT(name, description, price, category, qntStock)
VALUES ('Galaxia', 'Veja a maior Galáxia', '4.80', 'Stickers', 15);
INSERT INTO ANNOUNCEMENT (idproduct, title, description, promocionalPrice, status)
VALUES (1, 'Kit Galáxia', 'Combo de Galáxias', '12.40', 1);


INSERT INTO PRODUCT (name, description, price, category, qntStock) 
VALUES('Old TV', 'Televisão antiga mas estilosa', '5.30', 'Stickers', 10);
INSERT INTO ANNOUNCEMENT (idproduct, title, description, promocionalPrice, status)
VALUES (2, 'Combo Old TV', 'Combo de Old TVs', '10.30', 1);


SELECT PRODUCT.id, PRODUCT.name, PRODUCT.description, PRODUCT.price, PRODUCT.category, PRODUCT.qntStock,
       ANNOUNCEMENT.idAnuncio, ANNOUNCEMENT.title, ANNOUNCEMENT.description, ANNOUNCEMENT.promocionalPrice, ANNOUNCEMENT.status 
FROM PRODUCT
LEFT JOIN ANNOUNCEMENT
ON PRODUCT.id = ANNOUNCEMENT.idproduct;